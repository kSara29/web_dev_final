@model Instagram.ViewModels.Post.PostAddVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" asp-controller="Post" asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="input-group mb-3">
                <label asp-for="Image" for="inputGroupFile01" class="col-sm-2 col-form-label">Изображение</label>
                <input asp-for="Image" type="file" class="form-control" id="inputGroupFile01">
            </div>

            <div class="row mb-3">
                <label asp-for="Description" for="description" class="form-label">Описание</label>
                <textarea asp-for="Description" class="form-control" id="description" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary"> Опубликовать </button>
        </form>
    </div>
</div>